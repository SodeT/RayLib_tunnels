
PROGRAM = a.exe
CXX = g++

CFLAGS = -I include/ -Llib -lraylib -lraylibdll -lopengl32 -lgdi32 -lwinmm -lws2_32
CFLAGS += -ggdb -Wall -Wextra -Wpedantic
CFLAGS += -std=c++17 

!CXX = |> $(CXX) -c -o %o %f $(CFLAGS) |>
!LD = |> $(CXX) -o %o %f $(CFLAGS) |>

: foreach src/*.cpp |> !CXX |> obj/%B.o {OBJS}
: {OBJS} |> !LD |> bin/$(PROGRAM)
